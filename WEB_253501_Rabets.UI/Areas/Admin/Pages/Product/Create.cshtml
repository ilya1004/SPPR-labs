@page
@model WEB_253501_Rabets.UI.Areas.Admin.Pages.Product.CreateModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>ElectricProduct</h4>
<hr />
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ElectricProduct.Name" class="control-label"></label>
                <input asp-for="ElectricProduct.Name" class="form-control" />
                <span asp-validation-for="ElectricProduct.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ElectricProduct.Description" class="control-label"></label>
                <input asp-for="ElectricProduct.Description" class="form-control" />
                <span asp-validation-for="ElectricProduct.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ElectricProduct.Price" class="control-label"></label>
                <input asp-for="ElectricProduct.Price" type="number" class="form-control" />
                <span asp-validation-for="ElectricProduct.Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ElectricProduct.Category.Id" class="control-label">Категория</label>
                <select asp-for="ElectricProduct.Category.Id" class="form-control" asp-items="Model.CategoryItems">
                    <option value="">Выберите категорию</option>
                </select>
                <span asp-validation-for="ElectricProduct.Category.Id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" type="file" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" style="margin-top: 10px"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
