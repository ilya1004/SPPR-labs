@{
    var currUrl = "https://localhost:7001" + Context.Request.Path.Value;

    var urlList = Context.Request.Path.Value.Split('/').ToList();

    var category = urlList[2];
    var currPage = Convert.ToInt32(urlList[3]);

    var totalPages = Convert.ToInt32(ViewData["totalPages"]);
    var prevPage = currPage == 1 ? 1 : currPage - 1;
    var nextPage = currPage == totalPages ? totalPages : currPage + 1;
}

<div id="product-list">
    <div class="row" style="min-height: 550px">
        @{
            foreach (var item in Model.Items)
            {
                <div class="col-sm-4">
                    <div class="card">
                        <div class="card-body">
                            <div style="display:flex; justify-content: center">
                                <img src="@(item.ImagePath)" style="max-height: 200px; max-width: 350px" alt="No data" />
                            </div>
                            <h5 class="card-title">@(item.Name)</h5>
                            <p class="card-text" style="overflow: hidden; text-overflow: ellipsis; max-height: 150px">@(item.Description)</p>
                            <p><b>@(item.Price) руб</b></p>
                            <div style="display:flex; justify-content: center">
                                <a asp-controller="Cart" asp-action="Add" asp-route-id="@(item.Id)" asp-route-returnUrl="@currUrl" class="btn btn-primary">Add to cart</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
    <Pager current-page="@(currPage)" total-pages="@totalPages" category="@(category)" />
</div>

